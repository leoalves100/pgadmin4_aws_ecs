FROM dpage/pgadmin4:5.1

ENV PGADMIN_DEFAULT_EMAIL=${EMAIL_ROOT}
ENV PGADMIN_DEFAULT_PASSWORD=${PASSWORD_ROOT}

ENV PGADMIN_CONFIG_MAIL_SERVER="'${MAIL_SERVER}'"
ENV PGADMIN_CONFIG_MAIL_PORT=${MAIL_PORT}
ENV PGADMIN_CONFIG_MAIL_USERNAME="'${MAIL_USERNAME}'"
ENV PGADMIN_CONFIG_MAIL_PASSWORD="'${MAIL_PASSWORD}'"

COPY servers.json /pgadmin4/servers.json

EXPOSE 80 443
